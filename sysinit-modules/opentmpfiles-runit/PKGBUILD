# Maintainer: artoo <artoo@artixlinux.org>

_url="https://github.com/artix-linux/runit-artix"

pkgname=opentmpfiles-runit
pkgver=20180501
pkgrel=1
pkgdesc="Runit opentmpfiles init script"
arch=('any')
url="https://github.com/artix-linux/packages"
license=('GPL2')
provides=('init-opentmpfiles')
depends=('opentmpfiles')
makedepends=('git')
conflicts=('init-opentmpfiles')
source=("git+https://github.com/artix-linux/runit-artix.git#branch=core-split-patch")
sha256sums=('SKIP')

_inst_sysinit(){
    cd runit-artix/sysinit-modules
    install -Dm755 $1.sh ${pkgdir}/etc/runit/sysinit-services/$1.sh
}

package() {
    _inst_sysinit '02-opentmpfiles-dev'
    _inst_sysinit '09-opentmpfiles'
}
