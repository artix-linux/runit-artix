#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCDIR@/functions

case "$1" in
	start)
		stat_busy "Starting random-seed"
		init_random_seed
		add_daemon random-seed
		stat_done
		;;
	stop)
		stat_busy "Stopping random-seed"
		save_random_seed
		rm_daemon random-seed
		stat_done
		;;
	*)
		echo "usage: $0 {start|stop}"
		exit 1
esac
