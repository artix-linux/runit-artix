#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Starting tmpfiles-setup"
        tmpfiles --exclude-prefix=/dev --create --remove --boot
        add_daemon tmpfiles-setup
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac
