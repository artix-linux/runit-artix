#!/bin/bash

. @RCDIR@/rc.conf
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Starting LVM2 groups"
        activate_vgs
        add_daemon lvm
        stat_done
        ;;
    stop)
        stat_busy "Stopping LVM2 groups"
        deactivate_vgs
        rm_daemon lvm
        stat_done
        ;;
    *)
        echo "usage: $0 {start|stop}"
        exit 1
        ;;
esac
