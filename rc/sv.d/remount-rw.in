#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Remounting root filesystem rw"
        mount -o remount,rw /
        add_daemon remount-rw
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac
