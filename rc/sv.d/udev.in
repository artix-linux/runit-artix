#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Starting udev daemon"
        udevd --daemon || stat_die
        add_daemon udev
        stat_done
        ;;
    stop)
        stat_busy "Stopping udev"
        udevadm control --exit || stat_die
        rm_daemon udev
        stat_done
        ;;
    *)
        echo "usage: $0 {start|stop}"
        exit 1
        ;;
esac

