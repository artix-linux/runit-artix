#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Triggering udev uevents"
        udevadm trigger --action=add --type=subsystems
        udevadm trigger --action=add --type=devices

        add_daemon udev-trigger
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac

