#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCDIR@/functions

case "$1" in
	start)
		stat_busy "Starting cleanup"
		cleanup_start
		add_daemon cleanup
		stat_done
		;;
	stop)
		stat_busy "Stopping cleanup"
		cleanup_stop
		rm_daemon cleanup
		stat_done
		;;
	*)
		echo "usage: $0 {start|stop}"
		exit 1
esac

