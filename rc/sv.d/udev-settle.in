#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

case "$1" in
    start)
        stat_busy "Waiting for udev uevents to be processed"
        udevadm settle || stat_die
        calc_columns
        add_daemon udev-settle
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac

