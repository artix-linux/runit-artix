#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCDIR@/functions

case "$1" in
	start)
		stat_busy "Starting bootlogd"
		bootlogd_start
		add_daemon bootlogd
		stat_done
		;;
	stop)
		stat_busy "Stopping bootlogd"
		bootlogd_stop
		rm_daemon bootlogd
		stat_done
		;;
	*)
		echo "usage: $0 {start|stop}"
		exit 1
esac
