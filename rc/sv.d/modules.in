#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCLIBDIR@/functions

load_modules() {
	local rc=0

	/usr/bin/modules-load
	(( rc+=$? ))

	return $rc
}

case "$1" in
    start)
        stat_busy "Loading user-specified modules"
        load_modules || stat_die
        add_daemon modules
        stat_done
        ;;
    *)
        echo "usage: $0 {start}"
        exit 1
        ;;
esac

