#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCDIR@/functions

case "$1" in
	start)
		stat_busy "Mounting api filesystems"
		mount_api_fs
		add_daemon api-fs
		stat_done
		;;
	stop)
		stat_busy "Unounting api filesystems"
		umount_api_fs
		rm_daemon api-fs
		stat_done
		;;
	*)
		echo "usage: $0 {start|stop}"
		exit 1
esac
