#!/bin/bash

# sourcing our current rc.conf requires this to be a bash script
. @RCDIR@/rc.conf
. @RCDIR@/functions

case "$1" in
	start)
		stat_busy "Setting timezone"
		set_timezone "$TIMEZONE"
		add_daemon timezone
		stat_done
		;;
	stop)
		stat_busy "Setting timezone"
		set_timezone "$TIMEZONE"
		rm_daemon timezone
		stat_done
		;;
	*)
		echo "usage: $0 {start|stop}"
		exit 1
esac

