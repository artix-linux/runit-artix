#!/bin/sh
# vim: set ts=4 sw=4 et:

PATH=/usr/bin:/usr/sbin

. @RCDIR@/functions
detect_virt
load_conf '@RCDIR@/rc.conf'

if [ -e /run/runit/reboot ]; then
    chmod 100 /run/runit/reboot
fi

[ -x @RCDIR@/rc.shutdown ] && @RCDIR@/rc.shutdown

for f in @RCDIR@/shutdown.d/*.sh; do
    [ -r $f ] && . $f
done

msg "Stage 3 completed."
